{
  "name": "@monopolesystems/typescript-starter",
  "version": "1.1.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "DEBUG=test,info,debug jest --watchAll",
    "build": "tsc --project ./support/build",
    "compile": "tsc --project .",
    "compile:watch": "npm run compile -- --watch --incremental",
    "lint": "eslint --max-warnings=0 src/**/*",
    "lint:watch": "nodemon --ext ts --exec \"npm run lint\"",
    "prepare": "husky install",
    "prepublishOnly": "git diff-index --quiet HEAD -- && npm run lint && npm run build",
    "preversion": "git add --all .",
    "postversion": "git push && git push --tags"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {},
  "prettier": {
    "trailingComma": "all",
    "endOfLine": "auto",
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {}
}